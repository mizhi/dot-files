# useful aliases
alias ls='ls -G --color $*'

# ruby
alias b="bundle"
alias bi="b install --path vendor"
alias bu="b update"
alias be="b exec"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

alias tator="chruby-exec system -- tmuxinator"

# python
alias vact="source venv/bin/activate"

# emacs
alias em="emacs"
alias emnw="emacs -nw"

# heroku
alias hk="heroku"
alias dc="docker-compose"
