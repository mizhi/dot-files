function substring() {
    HAYSTACK="$1"
    NEEDLE="$2"
    if [[ "${HAYSTACK#*$NEEDLE}" != "${HAYSTACK}" ]]; then
        return 0 # NEEDLE is in HAYSTACK
    else
        return 1 # NEEDLE isn't in HAYSTACK
    fi
}

function prefix_path_if_exists() {
    NEW_PART=$1
    if [ -d "$NEW_PART" ] && ! substring "$PATH", "$NEW_PART"; then
        export PATH="$NEW_PART:$PATH"
    fi
}
